<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--
    ********************************************************************************
    *       Mybatis
    ********************************************************************************
    -->

    <!--  把mybatis SqlSessionFactory的创建交由spring管理-->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <!--数据源-->
        <property name="dataSource" ref="dataSource"/>
        <!--类简化前缀-->
        <property name="typeAliasesPackage" value="com.webster.jsm.**.entity"/>
        <!--mybatis配置文件路径-->
        <property name="configLocation" value="classpath:config/mybatis.xml"/>
        <!-- Mapper xml -->
        <property name="mapperLocations" value="classpath:com/webster/jsm/**/mapper/*Mapper.xml"/>

    </bean>

    <!--  通用mapper配置-->
    <bean class="tk.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.webster.jsm.**.mapper"/>
        <property name="properties">
            <value>
                mappers=com.webster.jsm.core.util.MyMapper
            </value>
        </property>
        <!--继承通用Mapper的才会被扫描-->
        <property name="markerInterface" value="com.webster.jsm.core.util.MyMapper"/>
    </bean>

    <!--  pagehelper用到-->
    <bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate"
          scope="prototype">
        <constructor-arg index="0" ref="sqlSessionFactory" />
    </bean>




</beans>