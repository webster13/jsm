<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webster.jsm.module.sys.mapper.StaffMapper">
    <resultMap id="BaseResultMap" type="com.webster.jsm.module.sys.entity.Staff">

        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="real_name" jdbcType="VARCHAR" property="realName"/>

        <association property="user" jdbcType="INTEGER" javaType="com.webster.jsm.module.sys.entity.User">
            <id column="id" property="user_id" jdbcType="INTEGER"/>
            <result column="username" jdbcType="VARCHAR" property="user_name"/>
        </association>

    </resultMap>

   <!--<select id="findById" parameterType="Integer" resultMap="BaseResultMap">-->
        <!--SELECT sys_staff.real_name,sys_staff.id-->
        <!--FROM sys_staff WHERE sys_staff.id = #{id}-->
    <!--</select>-->

    <select id="findById" parameterType="Integer" resultMap="BaseResultMap" resultType="com.webster.jsm.module.sys.entity.Staff">
        SELECT
            sys_staff.real_name AS  real_name,
            sys_staff.id AS  id,
            sys_user.id AS user_id,
            sys_user.username AS user_name

        FROM sys_staff, sys_user WHERE sys_staff.id = #{id} and sys_user.id=sys_staff.user_id;
    </select>




</mapper>